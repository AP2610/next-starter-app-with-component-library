{
  "name": "next-starter-app-monorepo",
  "version": "0.1.0",
  "private": true,
  "engine": "node >= 22",
  "packageManager": "npm@11.4.1",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "build:next-app": "turbo run build --filter=next-app",
    "build:ui-kit": "turbo run build --filter=ui-kit",
    "dev": "turbo run dev",
    "dev:next-app": "turbo run dev --filter=next-app",
    "dev:ui-kit": "turbo run dev --filter=ui-kit",
    "format": "prettier --write \"**/*.{js,ts,tsx,md,json}\"",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:next-app": "jest --selectProjects next-app",
    "test:ui-kit": "jest --selectProjects ui-kit",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "prepare": "husky"
  },
  "devDependencies": {
    "clsx": "^2.1.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tailwind-merge": "^3.3.1",
    "turbo": "^2.5.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}